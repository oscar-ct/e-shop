{
  "name": "e-shop-us",
  "version": "1.0.0",
  "description": "eCommerce application built with MERN stack ",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node backend/index.js",
    "server": "nodemon backend/index.js",
    "client": "npm start --prefix frontend",
    "data:import": "node backend/seeder.js",
    "data:truncate": "node backend/seeder.js -t",
    "build": "npm install && npm install --prefix frontend && npm run build --prefix frontend && npm run build:css --prefix frontend"
  },
  "author": "Oscar Castro",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mailtrap": "^3.1.1",
    "mongoose": "^7.3.1"
  },
  "devDependencies": {
    "dotenv": "^16.3.1",
    "nodemon": "^2.0.22"
  }
}
